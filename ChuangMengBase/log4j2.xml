<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="trace" monitorInterval="30">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
    
    <RollingFile name="cmFileAppender" fileName="/cm/logs/cm.log" filePattern="/cm/logs/archive/$${date:yyyy-MM}/cm-%d{MM-dd-yyyy}-%i.log.gz">
      	<PatternLayout>
        	<Pattern>%d{yyyy.MM.dd 'at' HH:mm:ss z} %-5level %class{36} %L %M - %msg%xEx%n</Pattern>
      	</PatternLayout>
      	<Policies>
        	<TimeBasedTriggeringPolicy />
        	<SizeBasedTriggeringPolicy size="10 MB"/>
      </Policies>
    </RollingFile>
    <Async name="cmAsyncAppender">
      	<AppenderRef ref="cmFileAppender"/>
    </Async>
  </Appenders>
  
  
  <Loggers>
    <Root level="debug">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="cmAsyncAppender"/>
    </Root>
  </Loggers>
</Configuration>